<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">


            <include
                android:id="@+id/layout_sensor_capacity"
                layout="@layout/layout_type_capacity_touch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <include
                android:id="@+id/layout_sensor_drop_laser"
                layout="@layout/layout_type_drop_laser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <include
                android:id="@+id/layout_sensor_sonar"
                layout="@layout/layout_type_sonar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <include
                android:id="@+id/layout_odometry"
                layout="@layout/layout_type_odometry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <include
                android:id="@+id/layout_sensor_neck_encoder"
                layout="@layout/layout_type_neck_encoder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <include
                android:id="@+id/layout_wheel_encoder"
                layout="@layout/layout_type_wheel_encoder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <include
                android:id="@+id/layout_robot_body_accelerometer_raw"
                layout="@layout/layout_robot_body_accelerometer_raw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <include
                android:id="@+id/layout_robot_body_gyroscope_raw"
                layout="@layout/layout_robot_body_gyroscope_raw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <include
                android:id="@+id/layout_robot_motor"
                layout="@layout/layout_robot_motor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <include
                android:id="@+id/layout_robot_neck_trajectory"
                layout="@layout/layout_robot_neck_trajectory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <include
                android:id="@+id/layout_robot_wheel_trajectory"
                layout="@layout/layout_robot_wheel_trajectory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <include
                android:id="@+id/layout_robot_color"
                layout="@layout/layout_robot_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
